<%= form_with model: [@article, @article.comments.build], local: true do |form| %>
  <h2>Create a comment:</h2>
  <p>
    <%= form.label      :commenter %>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label      :body %>
    <%= form.text_area  :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
